rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // User presentations and data
    match /users/{userId}/presentations/{presentationId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User profiles and settings
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public templates and themes (read-only for authenticated users)
    match /templates/{templateId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.admin == true; // Only admins can modify templates
    }

    // Analytics and usage data (write-only for authenticated users)
    match /analytics/{docId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null &&
        request.auth.token.admin == true; // Only admins can read analytics
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
